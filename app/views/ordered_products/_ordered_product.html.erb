<div id="<%= dom_id ordered_product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= ordered_product.quantity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price per unit:</strong>
    <%= ordered_product.price_per_unit %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Product:</strong>
    <%= ordered_product.product_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Order:</strong>
    <%= ordered_product.order_id %>
  </div>
</div>
