<%= form_with(model: ordered_product, class: "contents") do |form| %>
  <% if ordered_product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(ordered_product.errors.count, "error") %> prohibited this ordered_product from being saved:</h2>

      <ul class="list-disc ml-6">
        <% ordered_product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ordered_product.errors[:quantity].none?, "border-red-400 focus:outline-red-600": ordered_product.errors[:quantity].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price_per_unit %>
    <%= form.text_field :price_per_unit, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ordered_product.errors[:price_per_unit].none?, "border-red-400 focus:outline-red-600": ordered_product.errors[:price_per_unit].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :product_id %>
    <%= form.text_field :product_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ordered_product.errors[:product_id].none?, "border-red-400 focus:outline-red-600": ordered_product.errors[:product_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :order_id %>
    <%= form.text_field :order_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ordered_product.errors[:order_id].none?, "border-red-400 focus:outline-red-600": ordered_product.errors[:order_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
