<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Unit:</strong>
    <%= product.unit %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price per unit:</strong>
    <%= product.price_per_unit %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= product.quantity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Detail:</strong>
    <%= product.detail %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Product code:</strong>
    <%= product.product_code %>
  </div>
</div>
