<div class="max-w-3xl mx-auto mt-12 bg-white shadow-lg rounded-2xl p-8 border">
  <div class="flex items-center space-x-6">
    <!-- Avatar -->
    <div class="w-24 h-24 rounded-full bg-blue-100 flex items-center justify-center text-3xl font-bold text-blue-600">
      <%= @user.fullname[0].upcase rescue "U" %>
    </div>

    <!-- Thông tin cơ bản -->
    <div>
      <h1 class="text-2xl font-semibold text-gray-800"><%= @user.fullname %></h1>
      <p class="text-gray-500"><%= @user.role.present? ? @user.role.titleize : "Người dùng" %></p>
      <p class="text-sm text-gray-400 mt-1">Đã tham gia: <%= @user.created_at.strftime("%d/%m/%Y") %></p>
    </div>
  </div>

  <!-- Thông tin chi tiết -->
  <div class="mt-8 space-y-4">
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-sm text-gray-500">Email</p>
        <p class="font-medium text-gray-800"><%= @user.email %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Số điện thoại</p>
        <p class="font-medium text-gray-800"><%= @user.phone.presence || "Chưa cập nhật" %></p>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-sm text-gray-500">Địa chỉ</p>
        <p class="font-medium text-gray-800"><%= @user.address.presence || "Chưa cập nhật" %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Ngày sinh</p>
        <p class="font-medium text-gray-800">
          <%= @user.birth_date.present? ? @user.birth_date.strftime("%d/%m/%Y") : "Chưa cập nhật" %>
        </p>
      </div>
    </div>
  </div>

  <div class="mt-8 flex justify-end gap-2">
    <%= link_to "Chỉnh sửa thông tin", edit_user_path(@user),
          class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
    <%= button_to "Xóa", user_path(@user) , method: "delete", 
          form: {data: {turbo_confirm: "Bạn chắc là muốn xóa người dùng này chứ?"}},
          class: "bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600" %>
  </div>
</div>
