<div class="max-w-2xl mx-auto bg-white p-8 rounded-2xl shadow-md mt-8 border border-gray-100">
  <h1 class="text-2xl font-semibold text-gray-800 mb-6">Chỉnh sửa thông tin cá nhân</h1>

  <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-5" do |f| %>
    <div>
      <%= f.label :fullname, "Họ và tên", class: "block font-medium text-gray-700 mb-2" %>
      <%= f.text_field :fullname, class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= f.label :email, "Email", class: "block font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= f.label :phone, "Số điện thoại", class: "block font-medium text-gray-700 mb-2" %>
      <%= f.text_field :phone, class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= f.label :address, "Địa chỉ", class: "block font-medium text-gray-700 mb-2" %>
      <%= f.text_field :address, class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= f.label :birth_date, "Ngày sinh", class: "block font-medium text-gray-700 mb-2" %>
      <%= f.date_field :birth_date, class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="flex justify-end gap-3 mt-6">
      <%= link_to "Hủy", profile_path, class: "px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg" %>
      <%= f.submit "Lưu thay đổi", class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
