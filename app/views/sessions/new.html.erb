<div class="min-h-screen flex flex-col items-center justify-center bg-blue-50">
  <div class="bg-white shadow-lg rounded-sm flex flex-col md:flex-row overflow-hidden w-[90%] max-w-3xl">
    
    <!-- Hình minh họa bên trái -->
    <div class="hidden md:flex items-center justify-center bg-blue-100 w-1/2 p-6">
      <%= image_tag "", alt: "Login illustration", class: "w-64 h-auto" %>
    </div>

    <!-- Form bên phải -->
    <div class="w-full md:w-1/2 p-8 flex flex-col justify-center">
      <h2 class="text-2xl font-semibold text-gray-700 mb-6 text-center">Login</h2>

      <%= form_with(url: login_path, scope: :session, local: true, class: "space-y-5") do |f| %>
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-600 mb-1" %>
          <%= f.email_field :email, placeholder: "Email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-600 mb-1" %>
          <%= f.password_field :password, placeholder: "Password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <div class="flex gap-2 items-center">
          <%= f.checkbox :remember_me %>
          <%= f.label :remember_me, "Remember me", class: "text-sm font-medium text-gray-600"%>
        </div>

        <div>
          <%= f.submit "Login", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition" %>
        </div>
      <% end %>

      <p class="text-sm text-center mt-4 text-gray-600">
        New user?
        <%= link_to "Register", "#", class: "text-blue-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>
